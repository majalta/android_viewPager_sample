<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bidigames.viewpagersample.FirstFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/home_small"
        android:layout_marginTop="-90dp"
        android:alpha="0.5" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:alpha="1">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_cup_medium"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:textAlignment="center"
            android:text="@string/hello_blank_fragment"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_primary"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="3">
            <ImageButton
                android:id="@+id/coffee_btn"
                android:layout_alignParentStart="true"
                android:scaleType="fitCenter"
                android:background="@drawable/round_button"
                android:src="@drawable/ico_float_coffee"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_gen_voice"
                android:layout_weight="1.68"
                android:scaleType="fitCenter" />
            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/milk_btn"
                android:background="@drawable/round_button_milk"
                android:src="@drawable/ico_float_milk"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
